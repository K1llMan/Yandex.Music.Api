<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <TargetFrameworks>net7.0;net8.0;</TargetFrameworks>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
  </PropertyGroup>

  <PropertyGroup>
    <ApiVersion>2.0.4</ApiVersion>
    <Version>$(ApiVersion)</Version>
    <AssemblyVersion>$(ApiVersion)</AssemblyVersion>
    <FileVersion>$(ApiVersion)</FileVersion>
    <Authors>K1llM@n</Authors>
    <ProjectUrl>https://github.com/K1llMan/Yandex.Music.Api</ProjectUrl>
    <RepositoryUrl>https://github.com/K1llMan/Yandex.Music.Api</RepositoryUrl>
    <PackageReleaseNotes>https://github.com/K1llMan/Yandex.Music.Api/blob/$(ApiVersion)/CHANGELOG.md</PackageReleaseNotes>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath=""/>
        <None Include="../Resources/icon.png" Pack="true" PackagePath=""/>
    </ItemGroup>
</Project>
